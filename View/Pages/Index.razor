@page "/"
@inject IDialogService DialogService

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-success" @onclick="OpenShare"></button>


@code
{
    public void OpenShare()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.ShowMessageBox(new MessageBoxOptions(){Title="Hello",Message="World"},options);
    }
}
